{
  "manifest_version": 3,
  "name": "WhatsApp hate detectore Camer",
  "version": "1.0",
  "description": "Indique si un message es haineux et affiche un sugestion de reponse surtout dans le jargon camerounais.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://fesg1234-hate-camer.hf.space/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WhatsApp hate detectore Camer"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}